@model BookListMVC.Models.Book
@{
    ViewData["Title"] = "Deletar";
}

<br />

<h2>Deletar Livro</h2>
<hr />

<form asp-action="Details">
    <div class="container">
        <input asp-for="Id" hidden />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Author" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Price" disabled class="form-control" />
                </div>
            </div>
        </div>
        <br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-sm btn-success">Voltar para Lista</a>
            </div>

    </div>
</form>